header.header
  nav.nav.nav--tours
    a.nav__el(href='/') Dictioner
  .header__logo
    img(src="/img/icons/main.png", alt="Dictioner logo")
  nav.nav.nav--user
    if user
      a.nav__el(href='/dictionaries') Dictionaries
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a(href='/login').nav__el Log in
      a(href='/').nav__el.nav__el--cta Sign up